<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        app:fabCustomSize="23dp"
        app:srcCompat="@drawable/add_button" />

    <EditText
        android:id="@+id/categoryEditText"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/addFloatingActionButton"
        android:ems="10"
        android:hint="Category"
        android:inputType="text" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/categoryEditText"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/dateEditText"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/removeFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="true"
        app:backgroundTint="#00FFFFFF"
        app:fabCustomSize="32dp"
        app:srcCompat="@drawable/remove_button" />
</RelativeLayout>